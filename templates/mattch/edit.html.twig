{% extends 'base.html.twig' %}

{% block title %}Modifier un Match{% endblock %}

{% block body %}
    <div class="container my-5">
        <!-- Styles centralisés dans app.css -->
            .card {
                border-radius: 8px;
                box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
                overflow: hidden;
            }

            .card-header {
                background-color: var(--primary-color);
                color: white;
                padding: 10px;
                font-weight: bold;
                text-align: center;
            }

            .btn {
                margin-top: 10px;
            }
        </style>

        <div class="card">
            <div class="card-header">
                <h1>Modifier un Match</h1>
            </div>
            <div class="card-body">
                {{ include('mattch/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

                <div class="mt-3">
                    <a href="{{ path('app_mattch_index') }}" class="btn btn-secondary">Retour à la liste</a>
                </div>

                <div class="mt-3">
                    {{ include('mattch/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>

{% endblock %}
