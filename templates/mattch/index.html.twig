{% extends 'base.html.twig' %}

{% block title %}Mattch index{% endblock %}

{% block body %}
    <h1>Mattch index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>EquipeA</th>
                <th>EquipeB</th>
                <th>DateMatch</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mattch in mattches %}
            <tr>
                <td>{{ mattch.id }}</td>
                <td>{{ mattch.equipeA }}</td>
                <td>{{ mattch.equipeB }}</td>
                <td>{{ mattch.dateMatch ? mattch.dateMatch|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_mattch_show', {'id': mattch.id}) }}">show</a>
                    <a href="{{ path('app_mattch_edit', {'id': mattch.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_mattch_new') }}">Create new</a>
{% endblock %}
