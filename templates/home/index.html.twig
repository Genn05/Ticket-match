{% extends 'base.html.twig' %}

{% block title %}Accueil - TicketMatch{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .ticket-card {
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            transition: transform 0.2s ease-in-out;
            height: 350px; /* Set a fixed height for all ticket cards */
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        .ticket-card:hover {
            transform: scale(1.05);
        }

        .ticket-header {
            background-color: var(--light-color);
            padding: 10px;
            text-align: center;
            font-weight: bold;
            font-size: 1.2rem;
        }

        .ticket-body {
            padding: 15px;
        }

        .match-info {
            margin-bottom: 15px;
        }

        .match-teams {
            font-size: 1.1rem;
            font-weight: bold;
            text-align: center;
        }

        .ticket-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 15px;
        }

        .btn-reserve {
            background-color: var(--primary-color);
            color: #fff;
            border: none;
            padding: 10px;
            font-size: 1rem;
            font-weight: bold;
            text-transform: uppercase;
            transition: background-color 0.2s ease-in-out;
        }

        .btn-reserve:hover {
            background-color: var(--secondary-color);
        }

        .empty-message {
            text-align: center;
            color: var(--dark-color);
        }

        .ticket-type {
            display: inline-block;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            color: white;
            padding: 0.4rem 1rem;
            border-radius: 30px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            box-shadow: 0 4px 10px rgba(58, 12, 163, 0.2);
        }

        .ticket-type:hover {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            transform: scale(1.05);
        }

        .ticket-type-badge {
            display: inline-block;
            padding: 0.35em 1.1em;
            border-radius: 0;
            font-weight: 600;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 1px;
            background: none;
            color: #1976d2;
            border: none;
            box-shadow: none;
        }
        .vip-badge {
            background: linear-gradient(90deg, #ffd700 60%, #fffbe6 100%);
            color: #7c5c00;
            border: 1.5px solid #ffe066;
        }
        .standard-badge {
            background: linear-gradient(90deg, #007bff 60%, #e3f0ff 100%);
            color: #003366;
            border: 1.5px solid #90c2ff;
        }
        .etudiant-badge {
            background: linear-gradient(90deg, #43e97b 60%, #38f9d7 100%);
            color: #006644;
            border: 1.5px solid #7fffd4;
        }
    </style>
{% endblock %}

{% block main %}
    <div class="container py-5">
        <h1 class="page-title text-center">üéüÔ∏è Nos Tickets disponibles</h1>
        <div class="row">
            {% for ticket in tickets %}
                <div class="col-md-4 mb-4">
                    <div class="ticket-card">
                        <div class="ticket-header">
                            <h5 class="mb-0">
                                <span class="ticket-type-badge {{ ticket.type|lower }}-badge">{{ ticket.type|capitalize }}</span>
                            </h5>
                        </div>
                        <div class="ticket-body">
                            <div class="match-info">
                                <div class="match-date">
                                    <i class="far fa-calendar-alt me-1"></i> 
                                    {{ ticket.mattch.dateMatch|date('d/m/Y H:i') }}
                                </div>
                                <div class="match-teams">
                                    {{ ticket.mattch.equipeA }} vs {{ ticket.mattch.equipeB }}
                                </div>
                                <div class="stadium-info mt-3 text-center" style="pointer-events: none;">
                                    <span class="badge bg-secondary">
                                        <i class="fas fa-map-marker-alt me-2"></i>
                                        {{ ticket.mattch.stade.nom }} - {{ ticket.mattch.stade.ville }}
                                    </span>
                                </div>
                            </div>
                            <div class="ticket-info">
                                <div>
                                    <div class="text-muted mb-1">Quantit√©</div>
                                    <div class="fw-bold">{{ ticket.quantite }}</div>
                                </div>
                                <div class="text-end">
                                    <div class="text-muted mb-1">Prix</div>
                                    <div class="ticket-price">{{ ticket.prix }} ‚Ç¨</div>
                                </div>
                            </div>
                            <a href="{{ path('app_ticket_select', { id: ticket.id }) }}" class="btn btn-reserve w-100">
                                <i class="fas fa-ticket-alt me-2"></i> R√©server
                            </a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="empty-message">
                        <i class="fas fa-ticket-alt fa-2x mb-3"></i>
                        <h4>Aucun ticket disponible pour le moment.</h4>
                        <p class="mb-0">Revenez bient√¥t pour d√©couvrir nos prochains √©v√©nements.</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
