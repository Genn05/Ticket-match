    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome pour les icônes -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700;800&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <style>
    
 

        /* Nouvelle palette de couleurs moderne et vibrante */
        :root {
            --primary-color: #ff5733; /* Orange vif pour un look spécial */
            --secondary-color: #3a0ca3; /* Violet profond */
            --accent-color: #f72585; /* Rose vif */
            --light-color: #f8f9fa;
            --dark-color: #2b2d42;
            --success-color: #4cc9f0; /* Bleu ciel */
            --warning-color: #ffbe0b; /* Jaune */
            --info-color: #4895ef; /* Bleu clair */
            --danger-color: #f72585; /* Rose vif */
        }
        
        body {
            font-family: 'Poppins', sans-serif;
            background-color: linear-gradient(135deg, #f0f8ff, #e0f7fa); /* Dégradé AliceBlue et Cyan clair pour un look spécial */
            background-image: none; /* Removed background pattern */
        }
        
        h1, h2, h3, h4, h5, h6, .navbar-brand {
            font-family: 'Montserrat', sans-serif;
            text-transform: uppercase;
            font-weight: 700;
        }
        
        /* Navbar styling - Amélioré */
        .navbar {
            box-shadow: 0 4px 20px rgba(0,0,0,0.15);
            padding: 0;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color)) !important;
        }
        
        .navbar-brand {
            font-weight: 800;
            font-size: 1.8rem;
            color: white !important;
            padding: 0.5rem 1.2rem;
            background-color: var(--accent-color);
            margin: 0;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }
        
        .navbar-brand::before {
            content: '';
            position: absolute;
            top: 0;
            left: -10px;
            width: 120%;
            height: 100%;
            background: var(--accent-color);
            transform: skewX(-15deg);
            z-index: -1;
        }
        
        .nav-link {
            font-weight: 600;
            padding: 1.2rem 1.5rem !important;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            position: relative;
        }
        
        .nav-link:hover {
            background-color: rgba(255,255,255,0.1);
            color: var(--warning-color) !important;
        }
        
        /* Active link styling - Amélioré */
        .nav-link.active {
            color: var(--warning-color) !important;
            background-color: rgba(0,0,0,0.2);
            position: relative;
        }
        
        .nav-link.active::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 3px;
            background: var(--warning-color);
        }
        
        /* Container styling */
        .main-container {
            min-height: calc(100vh - 76px);
            padding: 2rem 0;
        }
        
        /* Card styling - Amélioré */
        .card {
            border-radius: 12px;
            overflow: hidden;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: none;
            background: white;
        }
        
        .card:hover {
            transform: translateY(-8px);
            box-shadow: 0 15px 30px rgba(0,0,0,0.15);
        }
        
        .card-header {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 1px;
            padding: 1.2rem;
        }
        
        /* Match card styling - Amélioré */
        .match-card {
            position: relative;
            overflow: hidden;
            border-top: 5px solid var(--accent-color);
        }
        
        .match-card::before {
            display: none; /* Supprimé car nous utilisons border-top */
        }
        
        .match-date {
            background-color: var(--warning-color);
            color: var(--dark-color);
            display: inline-block;
            padding: 0.4rem 1rem;
            border-radius: 30px;
            font-weight: 700;
            margin-bottom: 0.8rem;
            font-size: 0.9rem;
            box-shadow: 0 3px 10px rgba(255, 190, 11, 0.3);
        }
        
        .team-logo {
            width: 70px;
            height: 70px;
            object-fit: contain;
            transition: transform 0.3s ease;
            filter: drop-shadow(0 4px 6px rgba(0,0,0,0.1));
        }
        
        .match-card:hover .team-logo {
            transform: scale(1.1);
        }
        
        .vs-badge {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 700;
            margin: 0 1.5rem;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            font-size: 1.1rem;
        }
        
        /* Button styling - Amélioré */
        .btn-primary {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border: none;
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
            padding: 0.7rem 1.8rem;
            border-radius: 30px;
            box-shadow: 0 4px 15px rgba(67, 97, 238, 0.3);
            transition: all 0.3s ease;
        }
        
        .btn-primary:hover {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(67, 97, 238, 0.4);
        }
        
        .btn-outline-primary {
            color: var(--primary-color);
            border: 2px solid var(--primary-color);
            text-transform: uppercase;
            font-weight: 600;
            letter-spacing: 0.5px;
            border-radius: 30px;
        }
        
        .btn-outline-primary:hover {
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-color: transparent;
            color: white;
        }
        
        .btn-ticket {
            background: linear-gradient(135deg, var(--warning-color), #ff9e00);
            color: var(--dark-color);
            border: none;
            font-weight: 700;
            padding: 0.8rem 2rem;
            border-radius: 30px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(255, 190, 11, 0.3);
        }
        
        .btn-ticket:hover {
            background: linear-gradient(135deg, #ff9e00, var(--warning-color));
            transform: translateY(-3px);
            box-shadow: 0 8px 20px rgba(255, 190, 11, 0.4);
        }
        
        /* Stadium styling - Amélioré */
        .stadium-card {
            position: relative;
            overflow: hidden;
            border-radius: 12px;
        }
        
        .stadium-image {
            height: 200px;
            object-fit: cover;
            transition: transform 0.5s ease;
            width: 100%;
        }
        
        .stadium-card:hover .stadium-image {
            transform: scale(1.08);
        }
       
        
        /* Ticket styling - Amélioré */
        .ticket {
            position: relative;
            background-color: white;
            border-radius: 12px;
            padding: 1.8rem;
            margin-bottom: 1.8rem;
            box-shadow: 0 10px 25px rgba(0,0,0,0.08);
            overflow: hidden;
            border-left: 5px solid var(--accent-color);
        }
        
        .ticket::before {
            display: none; /* Supprimé car nous utilisons border-left */
        }
        
        .ticket-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.2rem;
            padding-bottom: 1.2rem;
            border-bottom: 2px dashed #e9ecef;
        }
        
        .ticket-price {
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--accent-color);
            text-shadow: 0 2px 4px rgba(247, 37, 133, 0.2);
        }
        
        .ticket-category {
            display: inline-block;
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            padding: 0.4rem 1rem;
            border-radius: 30px;
            font-weight: 600;
            font-size: 0.9rem;
            text-transform: uppercase;
            box-shadow: 0 4px 10px rgba(58, 12, 163, 0.2);
        }
        
        /* Hero section - Amélioré */
        .hero {
            background: linear-gradient(rgba(43, 45, 66, 0.8), rgba(43, 45, 66, 0.9)), url('/placeholder.svg?height=800&width=1600');
            background-size: cover;
            background-position: center;
            color: white;
            padding: 6rem 0;
            margin-bottom: 4rem;
            position: relative;
            overflow: hidden;
        }
        
        .hero::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, rgba(67, 97, 238, 0.3), rgba(58, 12, 163, 0.3));
            z-index: 1;
        }
        
        .hero .container {
            position: relative;
            z-index: 2;
        }
        
        .hero h1 {
            font-size: 4rem;
            font-weight: 800;
            margin-bottom: 1.5rem;
            text-shadow: 0 4px 8px rgba(0,0,0,0.3);
            background: linear-gradient(to right, #fff, #f72585);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            display: inline-block;
        }
        
        .hero p {
            font-size: 1.3rem;
            max-width: 700px;
            margin: 0 auto 2.5rem;
            opacity: 0.9;
        }
        
        /* Footer styling - Amélioré */
        footer {
            background: linear-gradient(135deg, var(--secondary-color), var(--primary-color));
            color: white;
            padding: 4rem 0 2rem;
            margin-top: 4rem;
            position: relative;
            overflow: hidden;
        }
        
        footer::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 5px;
            background: linear-gradient(to right, var(--warning-color), var(--accent-color), var(--success-color));
        }
        
        footer h5 {
            color: var(--warning-color);
            margin-bottom: 1.5rem;
            font-weight: 700;
            letter-spacing: 1px;
            position: relative;
            display: inline-block;
        }
        
        footer h5::after {
            content: '';
            position: absolute;
            bottom: -8px;
            left: 0;
            width: 40px;
            height: 3px;
            background: var(--warning-color);
        }
        
        footer a {
            color: rgba(255, 255, 255, 0.8);
            text-decoration: none;
            transition: all 0.3s ease;
            display: inline-block;
        }
        
        footer a:hover {
            color: var(--warning-color);
            transform: translateX(5px);
        }
        
        .social-icon {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            width: 40px;
            height: 40px;
            background-color: rgba(255,255,255,0.1);
            border-radius: 50%;
            transition: all 0.3s ease;
            margin-right: 10px;
        }
        
        .social-icon:hover {
            background-color: var(--accent-color);
            transform: translateY(-5px);
            box-shadow: 0 5px 15px rgba(247, 37, 133, 0.3);
        }
        
        /* Thème sélecteur */
        .theme-selector {
            position: fixed;
            right: 20px;
            bottom: 20px;
            z-index: 1000;
            background: white;
            border-radius: 50%;
            width: 50px;
            height: 50px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
            cursor: pointer;
            transition: all 0.3s ease;
        }
        
        .theme-selector:hover {
            transform: scale(1.1);
        }
        
        .theme-selector i {
            font-size: 1.5rem;
            color: var(--primary-color);
        }
        
        .theme-panel {
            position: fixed;
            right: -300px;
            bottom: 80px;
            width: 280px;
            background: white;
            border-radius: 10px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.2);
            padding: 20px;
            transition: right 0.3s ease;
            z-index: 1000;
        }
        
        .theme-panel.active {
            right: 20px;
        }
        
        .theme-panel h5 {
            margin-bottom: 15px;
            color: var(--dark-color);
        }
        
        .theme-options {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 10px;
        }
        
        .theme-btn {
            width: 100%;
            height: 40px;
            border-radius: 8px;
            border: 2px solid transparent;
            cursor: pointer;
            transition: all 0.2s ease;
        }
        
        .theme-btn:hover {
            transform: scale(1.05);
        }
        
        .theme-btn.active {
            border-color: var(--dark-color);
            box-shadow: 0 0 10px rgba(0,0,0,0.2);
        }
        
        /* Couleurs des thèmes */
        .theme-blue-purple {
            background: linear-gradient(135deg, #4361ee, #3a0ca3);
        }
        
        .theme-green-teal {
            background: linear-gradient(135deg, #2b9348, #006466);
        }
        
        .theme-orange-red {
            background: linear-gradient(135deg, #fb8500, #d62828);
        }
        
        .theme-pink-purple {
            background: linear-gradient(135deg, #f72585, #7209b7);
        }
        
        .theme-blue-teal {
            background: linear-gradient(135deg, #0077b6, #0096c7);
        }
        
        .theme-black-gold {
            background: linear-gradient(135deg, #2b2d42, #ffd60a);
        }
        
        /* Animations */
        @keyframes pulse {
            0% { transform: scale(1); }
            50% { transform: scale(1.05); }
            100% { transform: scale(1); }
        }
        
        .btn-ticket {
            animation: pulse 2s infinite;
        }
        
        /* Responsive adjustments */
        @media (max-width: 768px) {
            .navbar-brand {
                font-size: 1.4rem;
            }
            
            .hero h1 {
                font-size: 2.5rem;
            }
            
            .main-container {
                padding: 1rem 0;
            }
            
            .vs-badge {
                width: 40px;
                height: 40px;
                margin: 0 0.8rem;
            }
            
            .team-logo {
                width: 50px;
                height: 50px;
            }
            
            .theme-selector {
                width: 40px;
                height: 40px;
                right: 15px;
                bottom: 15px;
            }
            
            .theme-panel {
                width: 250px;
                bottom: 65px;
            }
        }
    </style>

    {% block stylesheets %}{% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
</head>

