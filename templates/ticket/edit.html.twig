{% extends 'base.html.twig' %}

{% block title %}Edit Ticket{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <!-- Styles centralisés dans app.css -->
        h1 {
            color: #2c3e50;
            margin-bottom: 20px;
        }

        a {
            display: inline-block;
            margin-top: 20px;
            color: #3498db;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .form-group {
            margin-bottom: 15px;
        }

        button {
            padding: 8px 16px;
            background-color: #2980b9;
            color: white;
            border: none;
            border-radius: 4px;
        }

        button:hover {
            background-color: #1f6391;
        }

        .form-container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #f8f9fa;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .form-container h1 {
            text-align: center;
            margin-bottom: 20px;
            color: var(--primary-color);
        }

        .form-container a {
            display: inline-block;
            margin-top: 20px;
            color: var(--secondary-color);
            text-decoration: none;
        }

        .form-container a:hover {
            text-decoration: underline;
        }
    </style>
{% endblock %}



{% block body %}
    {% if is_granted('ROLE_ADMIN') %}
        <div class="card form-container">
            <div class="card-header">
                <h1>Edit Ticket</h1>
            </div>
            <div class="card-body">
                {{ include('ticket/_form.html.twig', {'button_label': 'Update'}) }}
                <a href="{{ path('app_ticket_index') }}" class="btn btn-secondary mt-3">Back to list</a>
                {{ include('ticket/_delete_form.html.twig') }}
            </div>
        </div>
    {% else %}
        <div class="alert alert-danger">
            Vous n'avez pas la permission d'accéder à cette page.
        </div>
        <a href="{{ path('home') }}" class="btn btn-primary mt-3">Retour à l'accueil</a>
    {% endif %}
{% endblock %}
