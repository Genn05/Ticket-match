{% extends 'base.html.twig' %}

{% block title %}Mon Profil{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Profil de {{ app.user.nom }}</h4>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Nom d'utilisateur :</strong>
                        <p>{{ app.user.nom }}</p>
                         <strong>Prenom d'utilisateur :</strong>
                        <p>{{ app.user.prenom }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>Email :</strong>
                        <p>{{ app.user.email }}</p>
                    </div>
                    <div class="mb-3">
                        <strong>RÃ´les :</strong>
                        <p>
                            {% for role in app.user.roles %}
                                <span class="badge bg-secondary">{{ role }}</span>
                            {% endfor %}
                        </p>
                    </div>
                    <div class="mt-4 d-flex justify-content-between">
                        <a href="{{ path('app_home') }}" class="btn btn-outline-secondary">Retour</a>
                        <a href="{{ path('app_profile_edit') }}" class="btn btn-warning">Modifier le profil</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
