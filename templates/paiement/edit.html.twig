{% extends 'base.html.twig' %}

{% block title %}Modifier le Paiement{% endblock %}

{% block stylesheets %}
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">
    <style>
        .card {
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            overflow: hidden;
        }

        .card-header {
            background-color: var(--primary-color);
            color: white;
            padding: 10px;
            font-weight: bold;
            text-align: center;
        }

        .card-body {
            padding: 20px;
        }

        .card-footer {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #f8f9fa;
        }

        .btn-back {
            background-color: #6c757d;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
            text-decoration: none;
        }

        .btn-back:hover {
            background-color: #5a6268;
        }

        .btn-update {
            background-color: #28a745;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 4px;
        }

        .btn-update:hover {
            background-color: #218838;
        }

        .delete-form {
            display: inline-block;
        }

        .delete-form .btn {
            background-color: #dc3545;
            color: white;
            border: none;
            padding: 5px 10px;
            border-radius: 4px;
        }

        .delete-form .btn:hover {
            background-color: #c82333;
        }

        .btn {
            margin-top: 10px;
        }

        .container {
            margin-top: 3rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6">
                <div class="card shadow-sm">
                    <div class="card-header">
                        Modifier le paiement
                    </div>
                    <div class="card-body">
                        {{ include('paiement/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_paiement_index') }}" class="btn btn-back">
                            <i class="fas fa-arrow-left me-1"></i> Retour à la liste
                        </a>
                        {{ include('paiement/_delete_form.html.twig') }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
