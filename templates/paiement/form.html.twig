{% extends 'base.html.twig' %}

{% block title %}Effectuer un Paiement{% endblock %}

{% block body %}
<div class="container py-4">
    <h1>Effectuer un Paiement</h1>

    {% for label, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ label }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {{ form_start(form) }}
        {{ form_row(form.montant) }}
        {{ form_row(form.cardNumber) }}
        <button class="btn btn-primary">Payer</button>
    {{ form_end(form) }}

    <a href="{{ path('app_mes_tickets') }}" class="btn btn-secondary mt-3">Retour Ã  Mes Tickets</a>
</div>
{% endblock %}
